{
    // font
    "editor.fontFamily": "Source Han Code JP Light,Source Han Code JP M"
    ,"editor.fontSize": 13
    // wrap
    ,"editor.wrappingColumn": 0
    ,"editor.wrappingIndent": "indent"
    // tab
    ,"editor.tabSize": 4
    ,"editor.insertSpaces": false
    ,"editor.renderWhitespace": true
    ,"editor.cursorStyle": "line"
    // auto format"
    ,"editor.formatOnType": true
    ,"editor.lineNumbers": true
    ,"editor.selectionHighlight": false

    // golang
    ,"go.lintOnSave": true
    ,"go.formatTool": "goreturns"
    ,"go.formatOnSave": true
    ,"go.buildOnSave": true
    ,"go.vetOnSave": true
    ,"go.gopath": "/Users/atsushi/golang"
    ,"go.goroot": "/usr/local/Cellar/go/1.6.2/libexec/"

    // git
    ,"git.path": "/usr/local/bin/git"

    // vimStyle
    ,"vimStyle.useMacJisKeyboard": true
    ,"vimStyle.showMode": true
    ,"vimStyle.useErgonomicKeyForMotion": false
    
    // mykeyscroll
    ,"scrollkey.line1": 1
    ,"scrollkey.line2": 30
    ,"scrollkey.line3": 60
}
