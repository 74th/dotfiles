[

// for VimStyle
{
	"key": "ctrl+]",
	"command": "vim.Esc",
	"when": "editorTextFocus"
},

// C-d/u : for scroll key
{
	"key": "ctrl+d",
	"command": "scrollkey.down1",
	"when": "editorTextFocus"
},
{
	"key": "ctrl+u",
	"command": "scrollkey.up1",
	"when": "editorTextFocus"
},

// F1/C-1 : メニューを開く
{
	"key": "ctrl+1",
	"command": "workbench.action.showCommands"
},

// F2/C-2 : 現在オープン済みのファイルから選択
{
	"key": "f2",
"command": "workbench.action.quickOpen"
},
{
	"key": "ctrl+2",
	"command": "workbench.action.quickOpen"
},
// S-F2/CS-2 : 全てから選択
{
	"key": "shift+f2",
	"command": "workbench.action.quickOpen"
},
{
	"key": "ctrl+shift+2",
	"command": "workbench.action.quickOpen"
},

// F3/C-3 : 次の検索
{
	"key": "ctrl+3",
	"command": "editor.action.nextMatchFindAction",
	"when": "editorTextFocus"
},
{
	"key": "ctrl+shift+3",
	"command": "editor.action.previousMatchFindAction",
	"when": "editorTextFocus"
},

// F5/C-5 : デバッグ開始
{
	"key": "ctrl+5",
	"command": "workbench.action.debug.start",
	"when": "editorTextFocus"
},
{
	"key": "ctrl+5",
	"command": "workbench.action.debug.continue",
	"when": "!inDebugMode"
},

// F10/C-0 : step over
{
	"key": "ctrl+0",
	"command": "workbench.action.debug.stepOver",
	"when": "inDebugMode"
},
// F11/C-- : step into
{
	"key": "ctrl+-",
	"command": "workbench.action.debug.stepInto",
	"when": "inDebugMode"
},
// F12/C-= : step out
{
	"key": "ctrl+=",
	"command": "workbench.action.debug.stepOut",
	"when": "inDebugMode"
},
// F12/C-= : 定義に行く
{
	"key": "ctrl+=",
	"command": "editor.action.goToDeclaration",
	"when": "editorTextFocus"
},

// C-W -> hl: タブの移動
{
	"key": "ctrl+w ctrl+w",
	"command": "workbench.action.closeActiveEditor"
},
{
	"key": "ctrl+w w",
	"command": "workbench.action.closeActiveEditor"
},
{
	"key": "ctrl+w ctrl+l",
	"command": "workbench.action.focusNextGroup"
},
{
	"key": "ctrl+w l",
	"command": "workbench.action.focusNextGroup"
},
{
	"key": "ctrl+w ctrl+h",
	"command": "workbench.action.focusPreviousGroup"
},
{
	"key": "ctrl+w h",
	"command": "workbench.action.focusPreviousGroup"
},

// ひたすら移動系をCtrl+n,pに割り当てる
{
	"key": "ctrl+p",
	"command": "showPrevParameterHint",
	"when": "editorTextFocus && parameterHintsMultipleSignatures && parameterHintsVisible"
},
{
	"key": "ctrl+n",
	"command": "showNextParameterHint",
	"when": "editorTextFocus && parameterHintsMultipleSignatures && parameterHintsVisible"
},
{
	"key": "ctrl+p",
	"command": "selectPrevQuickFix",
	"when": "editorFocus && quickFixWidgetVisible"
},
{
	"key": "ctrl+n",
	"command": "selectNextQuickFix",
	"when": "editorFocus && quickFixWidgetVisible"
},
{
	"key": "ctrl+p",
	"command": "selectPrevSuggestion",
	"when": "editorTextFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible"
},
{
	"key": "ctrl+n",
	"command": "selectNextSuggestion",
	"when": "editorTextFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible"
},
{
	"key": "ctrl+p",
	"command": "workbench.action.quickOpenNavigatePrevious",
	"when": "inQuickOpen"
},
{
	"key": "ctrl+n",
	"command": "workbench.action.quickOpenNavigateNext",
	"when": "inQuickOpen"
},

// vimのインサートモードの再現
{
	// Ctrl-H : BackSpace
	"key": "ctrl+h",
	"command": "deleteLeft",
	"when": "editorTextFocus && vim.inInsertMode"
},
{
	// Ctrl-J : Enter
	"key": "ctrl+j",
	"command": "editor.action.insertCursorBelow",
	"when": "editorTextFocus"
},

// go
// F10/C-0 : カーソル位置のテストを実行
{
	"key": "f10",
	"command": "go.test.cursor",
	"when": "editorTextFocus && editorLangId == 'go' && !inDebugMode"
},
{
	"key": "ctrl+0",
	"command": "go.test.cursor",
	"when": "editorTextFocus && editorLangId == 'go' && !inDebugMode"
},

// dummy command
{
	 "key": "ctrl+shift+w",
	 "command": "workbench.action.closeWindow"
}
]
