[
	// for VimStyle
	{
		"key": "ctrl+[",
		"command": "vim.Esc",
		"when": "editorTextFocus"
	},
	{
		// Ctrl-w : delete word
		"key": "ctrl+w ctrl+w",
		"command": "deleteWordLeft",
		"when": "vim.inInsertMode"
	},
	{
		// Ctrl-w : delete word
		"key": "ctrl+w",
		"command": "deleteWordLeft",
		"when": "vim.inInsertMode"
	},
	// C-d/u : for scroll key
	{
		"key": "ctrl+d",
		"command": "editorScroll",
		"args": {
			"to": "down",
			"by": "halfPage",
			"revealCursor": true,
			"value": 0
		}
	},
	{
		"key": "ctrl+u",
		"command": "editorScroll",
		"args": {
			"to": "up",
			"by": "halfPage",
			"revealCursor": true,
			"value": 0
		}
	},
	// F1/C-1 : メニューを開く
	{
		"key": "ctrl+1",
		"command": "workbench.action.showCommands"
	},
	// F2/C-2 : 現在オープン済みのファイルから選択
	{
		"key": "f2",
		"command": "workbench.action.quickOpen"
	},
	{
		"key": "ctrl+2",
		"command": "workbench.action.quickOpen"
	},
	// S-F2/CS-2 : 全てから選択
	{
		"key": "shift+f2",
		"command": "workbench.action.quickOpen"
	},
	{
		"key": "ctrl+shift+2",
		"command": "workbench.action.quickOpen"
	},
	// F3/C-3 : 次の検索
	{
		"key": "ctrl+3",
		"command": "editor.action.nextMatchFindAction",
		"when": "editorTextFocus"
	},
	{
		"key": "ctrl+shift+3",
		"command": "editor.action.previousMatchFindAction",
		"when": "editorTextFocus"
	},
	// F5/C-5 : デバッグ開始
	{
		"key": "ctrl+5",
		"command": "workbench.action.debug.start",
		"when": "editorTextFocus"
	},
	{
		"key": "ctrl+5",
		"command": "workbench.action.debug.continue",
		"when": "!inDebugMode"
	},
	// F10/C-0 : step over
	{
		"key": "ctrl+0",
		"command": "workbench.action.debug.stepOver",
		"when": "inDebugMode"
	},
	// F11/C-- : step into
	{
		"key": "ctrl+-",
		"command": "workbench.action.debug.stepInto",
		"when": "inDebugMode"
	},
	// F12/C-= : step out
	{
		"key": "ctrl+=",
		"command": "workbench.action.debug.stepOut",
		"when": "inDebugMode"
	},
	// F12/C-= : 定義に行く
	{
		"key": "ctrl+=",
		"command": "editor.action.goToDeclaration",
		"when": "editorTextFocus"
	},
	// C-W -> hl: タブの移動
	{
		"key": "ctrl+w ctrl+w",
		"command": "workbench.action.closeActiveEditor & vim.inNormalMode",
		"when": "!vim.inInsertMode"
	},
	{
		"key": "meta+w",
		"command": "workbench.action.closeActiveEditor",
		"when": "isLinux"
	},
	{
		"key": "ctrl+w ctrl+l",
		"command": "workbench.action.focusRightGroup"
	},
	{
		"key": "ctrl+w l",
		"command": "workbench.action.focusRightGroup"
	},
	{
		"key": "ctrl+w ctrl+h",
		"command": "workbench.action.focusLeftGroup"
	},
	{
		"key": "ctrl+w h",
		"command": "workbench.action.focusLeftGroup"
	},
	{
		"key": "ctrl+w ctrl+j",
		"command": "workbench.action.focusBelowGroup"
	},
	{
		"key": "ctrl+w j",
		"command": "workbench.action.focusBelowGroup"
	},
	{
		"key": "ctrl+w ctrl+k",
		"command": "workbench.action.focusAboveGroup"
	},
	{
		"key": "ctrl+w k",
		"command": "workbench.action.focusAboveGroup"
	},
	{
		"key": "cmd+w",
		"command": "workbench.action.focusActiveEditorGroup",
		"when": "terminalFocus"
	},
	// ひたすら移動系をCtrl+n,pに割り当てる
	{
		"key": "ctrl+p",
		"command": "showPrevParameterHint",
		"when": "editorTextFocus && parameterHintsMultipleSignatures && parameterHintsVisible"
	},
	{
		"key": "ctrl+n",
		"command": "showNextParameterHint",
		"when": "editorTextFocus && parameterHintsMultipleSignatures && parameterHintsVisible"
	},
	{
		"key": "ctrl+p",
		"command": "selectPrevQuickFix",
		"when": "editorFocus && quickFixWidgetVisible"
	},
	{
		"key": "ctrl+n",
		"command": "selectNextQuickFix",
		"when": "editorFocus && quickFixWidgetVisible"
	},
	{
		"key": "ctrl+p",
		"command": "selectPrevSuggestion",
		"when": "editorTextFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible"
	},
	{
		"key": "ctrl+n",
		"command": "selectNextSuggestion",
		"when": "editorTextFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible"
	},
	{
		"key": "ctrl+p",
		"command": "workbench.action.quickOpenNavigatePrevious",
		"when": "inQuickOpen"
	},
	{
		"key": "ctrl+n",
		"command": "workbench.action.quickOpenNavigateNext",
		"when": "inQuickOpen"
	},
	// vimのインサートモードの再現
	{
		// Ctrl-H : BackSpace
		"key": "ctrl+h",
		"command": "deleteLeft",
		"when": "editorTextFocus && vim.inInsertMode"
	},
	{
		// Ctrl-J : Enter
		"key": "ctrl+j",
		"command": "editor.action.insertCursorBelow",
		"when": "editorTextFocus"
	},
	// go
	// F10/C-0 : カーソル位置のテストを実行
	{
		"key": "f10",
		"command": "go.test.cursor",
		"when": "editorTextFocus && editorLangId == 'go' && !inDebugMode"
	},
	{
		"key": "ctrl+0",
		"command": "go.test.cursor",
		"when": "editorTextFocus && editorLangId == 'go' && !inDebugMode"
	},
	//
	{
		"key": "cmd+r",
		"command": "editor.action.rename",
		"when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
	},
	// Linux
	{
		"key": "alt+s",
		"command": "saveAll",
		"when": "isLinux"
	},
	{
		"key": "alt+w",
		"command": "workbench.action.closeActiveEditor",
		"when": "isLinux"
	},
	// dummy command
	{
		"key": "ctrl+shift+w",
		"command": "workbench.action.closeWindow",
	},
	{
		"key": "f4",
		"command": "editor.action.formatDocument",
		"when": "editorHasDocumentFormattingProvider && editorHasDocumentFormattingProvider && editorTextFocus && !editorReadonly"
	},
	{
		"key": "shift+alt+f",
		"command": "-editor.action.formatDocument",
		"when": "editorHasDocumentFormattingProvider && editorHasDocumentFormattingProvider && editorTextFocus && !editorReadonly"
	},
	{
		"key": "alt+s",
		"command": "workbench.action.files.save"
	},
	{
		"key": "ctrl+s",
		"command": "-workbench.action.files.save"
	},
	{
		"key": "ctrl+s",
		"command": "-workbench.action.files.save"
	},
	{
		"key": "f3",
		"command": "workbench.action.terminal.focus",
		"when": "!panelFocus"
	},
	{
		"key": "f3",
		"command": "workbench.action.focusActiveEditorGroup",
		"when": "panelFocus"
	},
]
