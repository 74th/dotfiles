{
    // font
    // Macの場合、スペースを詰めて、ウェイトをハイフンで区切る
    // Windows,Linuxの場合、スペースを入れて、ウェイトもスペースで区切る
    // For Mac, Windows
    "editor.fontFamily": "SourceCodePro-Light,Source Code Pro Light,SourceHanCodeJP-Light,Source Han Code JP Light,TakaoGothic",
    // For Linux
    //"editor.fontFamily": "Source Code Pro Medium,Source Han Code JP Medium,TakaoGothic",
    "editor.fontSize": 13,
    // wrap
    "editor.wrappingColumn": 0,
    "editor.wrappingIndent": "indent",
    "editor.glyphMargin": true,
    // tab等の表示
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "editor.renderWhitespace": "boundary",
    "editor.renderIndentGuides": true,
    "editor.renderControlCharacters": true,
    // カーソル
    "editor.cursorStyle": "line",
    "editor.cursorBlinking": "smooth",
    "editor.renderLineHighlight": "all",
    // auto format
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.lineNumbers": "on",
    "editor.selectionHighlight": false,
    "editor.autoClosingBrackets": false,
    // file
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    // golang
    "go.lintOnSave": true,
    "go.formatTool": "goreturns",
    "go.formatOnSave": true,
    "go.buildOnSave": true,
    "go.vetOnSave": true,
    // vimStyle
    "vimStyle.defaultMode": "normal",
    "vimStyle.enabled": true,
    "vimStyle.imapEsc": "jj",
    // mykeyscroll
    "scrollkey.line1": 30,
    "git.confirmSync": false
}