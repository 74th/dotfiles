{
    "terminal.external.osxExec": "Terminal.app",
    // font
    // Macの場合、スペースを詰めて、ウェイトをハイフンで区切る
    // Windows,Linuxの場合、スペースを入れて、ウェイトもスペースで区切る
    // For Mac, Windows
    // "editor.fontFamily": "SourceCodePro-Light,Source Code Pro Light,SourceHanCodeJP-Light,Source Han Code JP Light,TakaoGothic",
    "editor.fontFamily": "Hasklig,Hasklig Light,SourceCodePro,Source Code Pro,SourceHanCodeJP,Source Han Code JP,TakaoGothic",
    "editor.fontLigatures": true,
    // For Linux
    //"editor.fontFamily": "Source Code Pro Medium,Source Han Code JP Medium,TakaoGothic",
    "editor.fontSize": 13,
    // java
    "java.referencesCodeLens.enabled": false,
    // svg
    "svgviewer.transparencygrid": false,
    // wrap
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "indent",
    "editor.glyphMargin": true,
    "editor.formatOnPaste": true,
    "python.linting.lintOnSave": true,
    // tab等の表示
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "editor.renderWhitespace": "none",
    "editor.renderIndentGuides": true,
    "editor.renderControlCharacters": true,
    // カーソル
    "editor.cursorStyle": "line",
    "editor.cursorBlinking": "smooth",
    "editor.renderLineHighlight": "all",
    // 表示周り
    "window.zoomLevel": 0,
    "workbench.colorCustomizations": {
        "editorIndentGuide.activeBackground": "#505050"
    },
    // git
    "git.confirmSync": false, // Syncボタンで尋ねない
    // auto format
    "editor.formatOnType": true,
    "editor.formatOnSave": false,
    "editor.lineNumbers": "on",
    "editor.selectionHighlight": false,
    "editor.autoClosingBrackets": false,
    // file
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    // golang
    "go.lintOnSave": "package",
    "go.formatTool": "goreturns",
    "go.buildOnSave": "package",
    "go.vetOnSave": "package",
    "go.testTimeout": "180s",
    "go.toolsGopath": "~/go",
    "go.coverOnTestPackage": true,
    // typescript
    "editor.codeLens": true,
    // vimStyle
    "vimStyle.defaultMode": "normal",
    "vimStyle.enabled": true,
    "vimStyle.imapEsc": "jj",
    // python -----------------------------
    // Lintは有効にする
    "python.linting.enabled": true,
    "python.formatting.provider": "yapf",
    "python.formatting.yapfArgs": [
        "--style={COLUMN_LIMIT: 120}"
    ],
    "terminal.integrated.shell.osx": "/usr/local/bin/bash",
    "terminal.integrated.shell.linux": "bash",
    // minimap
    "editor.minimap.enabled": false,
    // plantuml
    // "plantuml.server": "http://nagisa:18080/",
    // "plantuml.render": "PlantUMLServer",
    // cordova

    // mykeyscroll
    "scrollkey.line1": 30,
    "workbench.iconTheme": null,
    "workbench.colorTheme": "monokai-chacoral(HC)",
    "workbench.startupEditor": "newUntitledFile",
    "java.errors.incompleteClasspath.severity": "ignore",
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
    "gitlens.defaultDateStyle": "absolute",
    "[cuda]": {
		"editor.formatOnSave": true
    },
    "cSpell.language": "en,en-US,en-GB",
    "cSpell.enabledLanguageIds": [
        "asciidoc",
        "c",
        "cpp",
        "csharp",
        "css",
        "go",
        "handlebars",
        "html",
        "jade",
        "javascript",
        "javascriptreact",
        "json",
        "jsonc",
        "latex",
        "less",
        "markdown",
        "php",
        "plaintext",
        "pub",
        "python",
        "restructuredtext",
        "rust",
        "scss",
        "text",
        "typescript",
        "typescriptreact",
        "yaml",
        "yml"
    ],
    "cSpell.ignorePaths": [
        "**/package-lock.json",
        "**/node_modules/**",
        "**/vscode-extension/**",
        "**/.git/**",
        ".vscode",
        "typings"
    ],
    "cSpell.import": [
        "~/.cspell.json"
    ],
    "cSpell.dictionaryDefinitions": [
        {
            "name": "my_work",
            "path": "/Users/nnyn/mycheatsheets/CodeSpellChecker/work.txt",
        },
        {
            "name": "my_it",
            "path": "/Users/nnyn/mycheatsheets/CodeSpellChecker/it.txt"
        },
        {
            "name": "my_abbreviation",
            "path": "/Users/nnyn/mycheatsheets/CodeSpellChecker/abbreviation.txt"
        },
        {
            "name": "my_work_win",
            "path": "c:\\\\Users\\nnyn\\mycheatsheets\\CodeSpellChecker\\work.txt",
        },
        {
            "name": "my_it_win",
            "path": "c;\\\\Users\\nnyn\\mycheatsheets\\CodeSpellChecker\\it.txt"
        },
        {
            "name": "my_abbreviation_win",
            "path": "c:\\\\Users\\nnyn\\mycheatsheets\\CodeSpellChecker\\abbreviation.txt"
        }
    ],
    "cSpell.dictionaries": [
        "my_work",
        "my_it",
        "my_abbreviation",
    ],
    "[python]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.formatOnSave": false
    },
    "python.linting.mypyEnabled": true,
    "python.linting.mypyPath": "/usr/local/bin/mypy",
    "python.linting.pylintPath": "/usr/local/bin/pylint",
    "gitlens.mode.active": "zen",
    "files.associations": {
        "*.jinja": "yaml"
    },
    "git.autofetch": true,
    "search.exclude": {
        "**/.mypy_cache": true,
        "**/.vscode": true,
        "**/*.pyc": true,
        "**/tmp": true
    },
    "python.formatting.yapfPath": "/usr/local/bin/yapf"
}
