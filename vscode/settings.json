{
    // font
    // Macの場合、スペースを詰めて、ウェイトをハイフンで区切る
    // Windows,Linuxの場合、スペースを入れて、ウェイトもスペースで区切る
    // For Mac, Windows
    // "editor.fontFamily": "SourceCodePro-Light,Source Code Pro Light,SourceHanCodeJP-Light,Source Han Code JP Light,TakaoGothic",
    "editor.fontFamily": "SourceCodePro,Source Code Pro,SourceHanCodeJP,Source Han Code JP,TakaoGothic",
    // For Linux
    //"editor.fontFamily": "Source Code Pro Medium,Source Han Code JP Medium,TakaoGothic",
    "editor.fontSize": 13,
    // java
    "java.referencesCodeLens.enabled": false,
    // svg
    "svgviewer.transparencygrid": false,
    // wrap
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "indent",
    "editor.glyphMargin": true,
    // tab等の表示
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "editor.renderWhitespace": "none",
    "editor.renderIndentGuides": true,
    "editor.renderControlCharacters": true,
    // カーソル
    "editor.cursorStyle": "line",
    "editor.cursorBlinking": "smooth",
    "editor.renderLineHighlight": "all",
    // 表示周り
    "window.zoomLevel": 0,
    // git
    "git.confirmSync": false, // Syncボタンで尋ねない
    // auto format
    "editor.formatOnType": true,
    "editor.formatOnSave": false,
    "editor.lineNumbers": "on",
    "editor.selectionHighlight": false,
    "editor.autoClosingBrackets": false,
    // file
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    // Terminal
    "terminal.integrated.shell.windows": "C:\\cygwin64\\Cygwin.bat",
    // golang
    "go.lintOnSave": "package",
    "go.formatTool": "goreturns",
    "go.formatOnSave": true,
    "go.buildOnSave": "package",
    "go.vetOnSave": "package",
    // typescript
    "editor.codeLens": true,
    // vimStyle
    "vimStyle.defaultMode": "normal",
    "vimStyle.enabled": true,
    "vimStyle.imapEsc": "jj",
    // python -----------------------------
    // Lintは有効にする
    "python.linting.enabled": true,
    "python.formatting.provider": "yapf",
    "python.formatting.yapfArgs": [
        "--style={COLUMN_LIMIT: 120}"
    ],
    "terminal.integrated.shell.osx": "/usr/local/bin/fish",
    "terminal.integrated.shell.linux": "fish",
    // minimap
    "editor.minimap.enabled": false,
    // mykeyscroll
    "scrollkey.line1": 30,
    "typescript.check.tscVersion": false,
    "workbench.iconTheme": null,
    "workbench.colorTheme": "monokai-charcoal(HC)",
    "workbench.startupEditor": "newUntitledFile",
    "java.errors.incompleteClasspath.severity": "ignore"
}