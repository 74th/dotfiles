{
    // font
    // Macの場合、スペースを詰めて、ウェイトをハイフンで区切る
    // Windows,Linuxの場合、スペースを入れて、ウェイトもスペースで区切る
    // For Mac, Windows
    "editor.fontFamily": "SourceCodePro-Light,Source Code Pro Light,SourceHanCodeJP-Light,Source Han Code JP Light,TakaoGothic",
    // For Linux
    //"editor.fontFamily": "Source Code Pro Medium,Source Han Code JP Medium,TakaoGothic",
    "editor.fontSize": 13,

    // wrap
    "editor.wrappingColumn": 0,
    "editor.wrappingIndent": "indent",
    "editor.glyphMargin": true,

    // tab
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "editor.renderWhitespace": true,
    "editor.cursorStyle": "line",
    "editor.renderIndentGuides": true,

    // auto format
    "editor.formatOnType": true,
    "editor.lineNumbers": true,
    "editor.selectionHighlight": false,
    "editor.autoClosingBrackets": false,

    // file
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,

    // golang
    "go.lintOnSave": true,
    "go.formatTool": "goreturns",
    "go.formatOnSave": true,
    "go.buildOnSave": true,
    "go.vetOnSave": true,

    // vimStyle
    "vimStyle.defaultMode": "normal",
    "vimStyle.imapEsc":"jj",

    // mykeyscroll
    "scrollkey.line1": 30
}
