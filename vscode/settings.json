{
  "workbench.iconTheme": "high-contrast-icons-dark",
  "editor.fontFamily": "Liga InputMono,Hasklig,Hasklig Light,SourceCodePro,Source Code Pro,SourceHanCodeJP,Source Han Code JP,TakaoGothic",
  "terminal.integrated.fontFamily": "LigaInputMono Nerd Font Mono,Liga InputMono,Hasklig,Hasklig Light,SourceCodePro,Source Code Pro,SourceHanCodeJP,Source Han Code JP,TakaoGothic",
  "editor.fontLigatures": true,
  "editor.fontWeight": "400",
  "editor.letterSpacing": 0.2,
  "editor.fontSize": 13,
  "window.zoomLevel": 0,
  // カーソル
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "smooth",
  "editor.cursorWidth": 3,
  // wrap
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "indent",
  // tab等の表示
  "editor.tabSize": 4,
  "editor.renderControlCharacters": true,
  "workbench.editor.wrapTabs": true,
  // window
  "window.title": "${rootPath}",
  "window.titleBarStyle": "custom",
  "workbench.editor.showTabs": true,
  "window.menuBarVisibility": "default",

  // 標準の挙動 ----------
  // git
  "git.confirmSync": false, // Syncボタンで尋ねない
  "git.autofetch": true,
  "git.autoStash": true,
  "git.showProgress": true,
  "git.suggestSmartCommit": false,
  "git.branchSortOrder": "committerdate",
  "scm.defaultViewMode": "tree",
  // 検索の挙動
  "editor.find.autoFindInSelection": "multiline",
  // auto format
  "search.smartCase": true,
  "search.searchOnType": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "editor.lineNumbers": "on",
  "editor.selectionHighlight": true,
  "editor.autoClosingBrackets": "never",
  // explorer
  "explorer.confirmDelete": false,
  "explorer.incrementalNaming": "smart",
  "explorer.openEditors.visible": 3,
  "explorer.confirmDragAndDrop": false,
  // file
  "files.eol": "\n",
  "files.encoding": "utf8",
  "files.autoGuessEncoding": false,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  // terminal
  "terminal.integrated.shell.osx": "/opt/homebrew/bin/bash",
  "terminal.integrated.shellArgs.osx": [],

  "terminal.integrated.shell.linux": "/usr/bin/bash",
  "terminal.integrated.fontSize": 14,

  // editor
  "editor.suggestSelection": "first",
  "editor.copyWithSyntaxHighlighting": false,
  "editor.renderWhitespace": "all",
  "editor.folding": false,
  "editor.minimap.enabled": false,
  "editor.codeLens": true,
  "breadcrumbs.enabled": true,
  // debug console
  "debug.console.fontSize": 14,
  "debug.openExplorerOnEnd": true,
  "debug.showInStatusBar": "always",
  // その他
  "extensions.autoCheckUpdates": true,
  "extensions.autoUpdate": true,
  "workbench.settings.editor": "json",
  "scm.alwaysShowProviders": false,
  // 除外ファイル
  "search.exclude": {
    "**/node_modules": true,
    "**/.mypy_cache": true,
    "**/.vscode": true,
    "**/*.pyc": true,
    "**/.venv": true,
    "**/tmp": true,
    "**/.settings": true,
    "**/.factorypath": true,
    "**/.pytest_cache": true,
    "**/.terraform": true
  },
  "files.exclude": {
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/.mypy_cache": true,
    "**/.venv": true,
    "**/*.swp": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true,
    "**/.pytest_cache": true,
    "**/.terraform": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.hg/store/**": true,
    "**/__pycache__": true,
    "**/.mypy_cache": true,
    "**/.venv/**": true,
    "**/*.swp": true,
    "**/.classpath/**": true,
    "**/.project/**": true,
    "**/.settings/**": true,
    "**/.factorypath/**": true,
    "**/.pytest_cache/**": true,
    "**/.terraform/**": true
  },
  // setting-sync
  "settingsSync.keybindingsPerPlatform": false,
  "settingsSync.ignoredExtensions": ["ms-azuretools.vscode-azureterraform"],
  "settingsSync.ignoredSettings": [
    "python.pythonPath",
    "vscode-neovim.neovimPath",
    "vscode-neovim.neovimExecutablePaths.darwin",
    "terminal.integrated.shell.osx"
  ],
  // Remote Development -------------
  "remote.SSH.defaultExtensions": [
    "editorconfig.editorconfig",
    "mhutchie.git-graph",
    "eamodio.gitlens",
    "github.vscode-pull-request-github",
    "esbenp.prettier-vscode",
    "streetsidesoftware.code-spell-checker",
    "svipas.control-snippets",
    "hediet.vscode-drawio",
    "tyriar.shell-launcher"
  ],
  "remote.containers.defaultExtensions": [
    "editorconfig.editorconfig",
    "mhutchie.git-graph",
    "eamodio.gitlens",
    "github.vscode-pull-request-github",
    "esbenp.prettier-vscode",
    "streetsidesoftware.code-spell-checker",
    "svipas.control-snippets",
    "hediet.vscode-drawio",
    "tyriar.shell-launcher"
  ],
  "remote.containers.dotfiles.repository": "74th/dotfiles",
  // vimStyle -----------------------
  "vimStyle.defaultMode": "normal",
  "vimStyle.enabled": true,
  "vimStyle.imapEsc": "jj",
  // nvim -----------------------
  "vscode-neovim.highlightGroups.highlights": {
    "Directory": "vim",
    "IncSearch": {
      "backgroundColor": "theme.editor.findMatchBackground",
      "borderColor": "theme.editor.findMatchBorder"
    },
    "Search": {
      "backgroundColor": "theme.editor.findMatchHighlightBackground",
      "borderColor": "theme.editor.findMatchHighlightBorder"
    },
    "Visual": {
      "backgroundColor": "theme.editor.selectionBackground"
    },
    "Conceal": "vim",
    "Substitute": "vim"
  },
  "vscode-neovim.neovimExecutablePaths.linux": "/home/nnyn/bin/nvim",
  "vscode-neovim.neovimExecutablePaths.darwin": "/Users/nnyn/OSS/nvim-osx64/bin/nvim",
  "vscode-neovim.useCtrlKeysForInsertMode": false,
  "vscode-neovim.useCtrlKeysForNormalMode": false,

  "diffEditor.codeLens": false,
  "helium-icon-theme.folders.theme": "classic",
  // cSpell -----------------------
  "cSpell.language": "en,en-US",
  "cSpell.enabledLanguageIds": [
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "go",
    "handlebars",
    "html",
    "jade",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "pub",
    "python",
    "restructuredtext",
    "rust",
    "scss",
    "text",
    "typescript",
    "typescriptreact",
    "yaml",
    "yml"
  ],
  "cSpell.ignorePaths": [
    "**/package-lock.json",
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/**",
    ".vscode",
    "typings"
  ],
  "cSpell.customUserDictionaries": [
    {
      "name": "my_work",
      "path": "~/mycheatsheets/CodeSpellChecker/work.txt"
    },
    {
      "name": "my_it",
      "path": "~/mycheatsheets/CodeSpellChecker/it.txt"
    },
    {
      "name": "my_abbreviation",
      "path": "~/mycheatsheets/CodeSpellChecker/abbreviation.txt"
    },
    {
      "name": "my_word",
      "path": "~/mycheatsheets/CodeSpellChecker/me.txt"
    }
  ],
  "cSpell.dictionaries": ["my_work", "my_it", "my_abbreviation", "my_word"],
  // 拡張子との追加の紐付け
  "files.associations": {
    "*.jinja": "yaml",
    "*.md": "markdown",
    "bashrc": "shellscript"
  },
  // go --------------------------
  "go.inferGopath": false,
  "go.lintOnSave": "package",
  "go.lintTool": "golangci-lint",
  "go.formatTool": "goimports",
  "go.buildOnSave": "package",
  "go.vetOnSave": "package",
  "go.testTimeout": "180s",
  "go.toolsGopath": "~/go",
  "go.testFlags": ["-v"],
  "go.coverOnTestPackage": true,
  "[go]": {
    "editor.formatOnType": true,
    "editor.formatOnSave": true
  },
  "go.useLanguageServer": true,
  "go.languageServerExperimentalFeatures": {
    "format": true,
    "diagnostics": true,
    "documentLink": true
  },
  // typescript --------------------------
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  // javascript --------------------------
  "javascript.referencesCodeLens.enabled": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  // python --------------------------
  "[python]": {
    "editor.detectIndentation": false,
    "editor.formatOnSave": false,
    // Python の black は ファイル単位のみサポート
    "editor.formatOnSaveMode": "file"
  },
  "python.testing.pytestEnabled": true,
  "python.linting.mypyEnabled": true,
  // Lintは有効にする
  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.formatting.provider": "black",
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.typeshedPaths": [
    "/home/nnyn/OSS/typeshed",
    "/home/nnyn/dotfiles/pytho_typeshed/typings"
  ],
  // 一旦 Insider は OFF
  "python.insidersChannel": "off",
  "python.showStartPage": false,
  //
  "python.testing.promptToConfigure": false,
  "python.disableInstallationCheck": true,
  // yaml -----------------------------
  "yaml.validate": false,
  "yaml.customTags": [],
  "[yaml]": {
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // markdown --------------------------
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "markdown.styles": [
    "https://storage.googleapis.com/74th-open/markdown-style.css"
  ],

  // 雑 --------------------------------
  "[cuda]": {
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // よく変わるやつ
  "diffEditor.ignoreTrimWhitespace": false,
  "gitlens.gitCommands.closeOnFocusOut": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "triggerTaskOnSave.on": true,
  "editor.tokenColorCustomizations": {
    "[Monokai Pro]": {
      "comments": "#B6B6B6"
    },
    "[Shiro]": {
      "comments": "#C0C0C0"
    },
    "[Deep Ocean Theme]": {
      "comments": "#C0C0C0",
      "sideBar.foreground": "#C0C0C0"
    }
  },
  "workbench.colorCustomizations": {
    "[Shiro]": {
      "sideBar.foreground": "#ffffff"
    },
    "[Deep Ocean Theme]": {
      "sideBar.foreground": "#C0Cww0C0"
    }
  },
  "editor.renderLineHighlight": "all",
  "problems.showCurrentInStatus": true,
  "remote.SSH.enableAgentForwarding": false,
  "liveshare.showInStatusBar": "whileCollaborating",
  "liveshare.allowGuestTaskControl": true,
  "liveshare.allowGuestDebugControl": true,
  "liveshare.joinDebugSessionOption": "Automatic",
  "liveshare.languages.allowGuestCommandControl": true,
  "liveshare.guestApprovalRequired": true,
  "liveshare.publishWorkspaceInfo": true,
  "liveshare.diagnosticLogging": true,
  // "files.autoSave": "afterDelay",
  "hediet.vscode-drawio.theme": "automatic",
  "workbench.colorTheme": "monokai-charcoal",
  "jupyter.askForKernelRestart": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editorAssociations": [
    {
      "viewType": "jupyter.notebook.ipynb",
      "filenamePattern": "*.ipynb"
    }
  ],
  "jupyter.sendSelectionToInteractiveWindow": true,
  "vscode-edge-devtools.headless": true,
  "jupyter.interactiveWindowMode": "perFile"
}
