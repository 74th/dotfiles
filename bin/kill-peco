#!/usr/bin/python3
# ターゲットのプロセスを選択して kill
import re
import subprocess
import sys
import platform
import argparse

os_name = platform.system()
if os_name == "Darwin":
    ps_command = "ps aux"
else:
    ps_command = "ps aux --no-headers"

parser = argparse.ArgumentParser()
parser.add_argument("grep", nargs="?", default=None)
parser.add_argument("-KILL", action="store_true")
args = parser.parse_args()

if args.KILL:
    cmd_args = ["-KILL"]
else:
    cmd_args = []

if args.grep:
    m = args.grep
    r = subprocess.run(
        f"{ps_command} | grep {m} | peco",
        check=True,
        capture_output=True,
        shell=True,
        text=True,
    )
else:
    r = subprocess.run(
        f"{ps_command} | peco", check=True, capture_output=True, shell=True, text=True
    )
g = r.stdout.strip()

if not g:
    sys.exit(1)

print(g)

m = re.match(r"^\S+\s+(\S+)\s+", g)
if not m:
    sys.exit(1)

process_id = m.group(1)

cmd = ["kill"] + cmd_args + [process_id]

print(" ".join(cmd))

r = subprocess.run(
    cmd,
    check=True,
    capture_output=True,
    text=True,
)
