#!/usr/bin/python3
# ghq を使ってディレクトリを選んで code コマンドを実行
import sys
import invoke
import platform

c = invoke.Context()
g = c.run("ghq list | peco").stdout.strip()

if not g:
    sys.exit(1)

g = c.run(f"ghq list --full-path {g} | head -n1", hide=True).stdout.strip()
if platform.node() in ["violet-gopher"]:
    c.run(f"rcode {g}")
else:
    c.run(f"code-insiders {g}")
