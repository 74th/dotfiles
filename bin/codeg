#!system-python
# ghq を使ってディレクトリを選んで code コマンドを実行
from pathlib import Path
import os
import subprocess
import sys
from socket import gethostname

code = "code"
g = ""
if len(sys.argv) == 2:
    m = sys.argv[1]
    l: list[str] = subprocess.run(
        ["ghq", "list"], capture_output=True, text=True
    ).stdout.split("\n")
    for p in l:
        if p.find(m) >= 0:
            if len(g) == 0 or len(p) < len(g):
                g = p
else:
    r = subprocess.run(
        "ghq list | peco", check=True, capture_output=True, shell=True, text=True
    )
    g = r.stdout.strip()

if not g:
    sys.exit(1)

r = subprocess.run(
    f"ghq list --exact --full-path {g} | head -n1",
    check=True,
    capture_output=True,
    shell=True,
    text=True,
)
g = r.stdout.strip()
hostname = gethostname()

if "SSH_CLIENT" in os.environ:
    code = Path("~/ghq/github.com/74th/dotfiles/bin/c").expanduser()

cmd = ["system-python", code, g]
print(cmd)

subprocess.run(cmd, check=True, capture_output=True)
