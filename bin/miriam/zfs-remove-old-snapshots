import invoke

c = invoke.Context()

snapshots = c.run(
    "sudo zfs list -t snapshot  -o name -S creation -d30",
    echo=True,
    hide="out",
).stdout.split("\n")[1:]

for i, snapshot in enumerate(snapshots):
    cmd = f"sudo zfs destroy -vr {snapshot}"
    print(f"{i/len(snapshots):0.2f} {cmd}")
    if not snapshot:
        continue
    c.run(cmd, hide="out", warn=True)
