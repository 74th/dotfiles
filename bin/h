#!/bin/python3
import invoke

_c = invoke.Context()


def exists(cmd: str) -> bool:
    return _c.run(f"which {cmd}", warn=True, echo=False, hide=True).ok


cmds = {"bat": "cat代用"}
cmds = {"lsd": "ls代用 lsd"}
cmds = {"fd": "高速find fd .js"}
cmds = {"rg": "高速grep rg search_text"}


for cmd, description in cmds.items():
    if exists(cmd):
        print(f"\033[32m{cmd}\033[0m {description}")
