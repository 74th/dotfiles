#!/usr/bin/python3
# ファイルの拡張子をみて解凍する
from typing import List
import sys
import os.path
import invoke

if len(sys.argv) <= 1:
    print("d <something>")
    sys.exit(1)


c = invoke.Context()
c.config.update({"run": {"echo": True}})


def main(args: List[str]):
    n = os.path.expanduser(args[0])
    _, ext = os.path.splitext(n)

    if n.endswith(".pem") or n.endswith(".crt"):
        c.run(f"keytool -printcert -file {n}")
        return

    if n.endswith(".tar"):
        c.run(f"tar -cvf  {n}")
        return

    if n.endswith(".tar.gz"):
        c.run(f"tar -zxvf {n}")
        return

    if n.endswith(".tar.xz"):
        c.run(f"tar -Jxvf {n}")
        return

    if n.endswith(".deb"):
        c.run(f"sudo apt install {n}")
        return

    if n.endswith(".rar"):
        c.run(f"unrar d {n}")
        return

    if n.endswith(".tbz"):
        c.run(f"bzip2 -d {n}")
        return

    if n.count(".zip"):
        c.run(f"unzip {n}", warn=True)
        return
    print(f"cannot determine {n}")


main(sys.argv[1:])
