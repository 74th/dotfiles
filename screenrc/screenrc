# エスケープは<C-z>
escape ^z^z
# ビープの代わりに画面表示
vbell on
# ステータスバー
hardstatus on
hardstatus alwayslastline '%{= .b}%H%{-} %L=%-w%45L>%{=u b.}%n %t%{-}%+w %-17<%=%m/%d %02c:%s'
caption always '%?%F%{= bw}%:%{= wk}%?%2n%f%07=%t%='
sorendition '+r .b'
# 別画面サポート。Vimやless使うときに便利
altscreen on
# 背景色消去
defbce "on"
# 起動メッセージ
startup_message off
